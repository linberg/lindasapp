<%= form_for @product do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-4 col-md-offset-4 product_form">
   <div class="field form-group">
      <%= f.label :name, "Name" %><br>
      <%= f.text_field :name, class: "form-control" %>
   </div>
   <div class="field form-group">
      <%= f.label :description, "Description" %><br>
      <%= f.text_field :description, class: "form-control" %>
   </div>
   <div class="field form-group">
      <%= f.label :text, "Text" %><br>
      <%= f.text_field :text, class: "form-control" %>
   </div>
   <div class="field form-group">
      <%= f.label :image_url, "Image URL" %><br>
      <%= f.text_field :image_url, class: "form-control" %>
   </div>
   <div class="field form-group">
      <%= f.label :color, "Color" %><br>
      <%= f.text_field :color, class: "form-control" %>
   </div>
   <div class="field form-group">
      <%= f.label :price, "Price" %><br>
      <%= f.text_field :price, class: "form-control" %>
   </div>
   <div class="actions">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <%= content_tag(:strong, 'Submit') %>
      <% end %>
      <%= link_to 'Back', products_path, class: "btn btn-default" %>
   </div>
   <% end %>
</div>
