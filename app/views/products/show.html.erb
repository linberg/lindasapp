<div class="col-xs-6 col-md-9 img_show_group">
  <p>
  <strong><h4><%= @product.name %></h4></strong>
  </p>

  <p>$ <%= @product.price %></p>

  <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>

<p><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
  <em><%= @product.description %></em>
</p>
  </div><!--end img_show_group-->

<div class="col-xs-6 col-md-3 product_show">
  <img src="<%= @product.image_url %>" class="img-thumbnail">


<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class: "form-control" %>
    </p>
    <p>
      <div class="rating"></div>
    </p>
    <p>
      <%= button_tag(type: 'submit', class: "btn btn-default") do %>
        <%= content_tag(:strong, 'Submit') %>
      <% end %>
    </p>
  <% end %>
<% end %>

<div class="product-reviews">
  <% @comments.each do |comment| %>
    <div class="row">
      <hr>
      <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
      <p><%= "Rating: #{comment.rating}/5" %></p>
      <p><%= comment.body %></p>
    </div>
  <% end %>
</div>

Was this review helpful?
<button type="button" class="btn btn-default" aria-label="thumbs-up">
  <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
</button>
<button type="button" class="btn btn-default" aria-label="thumbs-down">
  <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
</button>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div><!--end product_show-->
