<div class="product_page" id="product_page"><p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="product_titles">
<table>
  <thead>
    <tr>
      <th>Name&nbsp;</th>
      <th>Description&nbsp;</th>
      <th>Text&nbsp;</th>
      <th>URL&nbsp; </th>
      <th colspan="3"></th>
    </tr>
  </thead>
</div><!--end div class product_titles-->

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.text %></td>
        <td><%= product.image_url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Bist du sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %></div> <!--end productpage div-->
